#!/usr/bin/env node

/**
 * Module dependencies.
 */

var app = require('../app');
var debug = require('debug')('studentpriced:server');
var http = require('http');
var https = require('https');
var fs = require('fs');

// Options

var options = {
  key: fs.readFileSync('/etc/letsencrypt/live/studddent.com/privkey.pem'),
  cert: fs.readFileSync('/etc/letsencrypt/live/studddent.com/cert.pem'),
  ca: fs.readFileSync('/etc/letsencrypt/live/studddent.com/chain.pem')
};


/**
 * Get port from environment and store in Express.
 */


// Create HTTPS server

var server = https.createServer(options, app);


/**
 * Create HTTP server.
 */


http.createServer(function (req, res) {
  res.writeHead(301, { "Location": "https://" + req.headers['host'] + req.url });
  res.end();
}).listen(9000);

/**
 * Listen on provided port, on all network interfaces.
 */

server.listen(443);
server.on('error', onError);
server.on('listening', onListening);

/**
 * Normalize a port into a number, string, or false.
 */

function normalizePort(val) {
  var port = parseInt(val, 10);

  if (isNaN(port)) {
    // named pipe
    return val;
  }

  if (port >= 0) {
    // port number
    return port;
  }

  return false;
}

/**
 * Event listener for HTTP server "error" event.
 */

function onError(error) {
  if (error.syscall !== 'listen') {
    throw error;
  }

  var bind = typeof port === 'string'
    ? 'Pipe ' + port
    : 'Port ' + port;

  // handle specific listen errors with friendly messages
  switch (error.code) {
    case 'EACCES':
      console.error(bind + ' requires elevated privileges');
      process.exit(1);
      break;
    case 'EADDRINUSE':
      console.error(bind + ' is already in use');
      process.exit(1);
      break;
    default:
      throw error;
  }
}

/**
 * Event listener for HTTP server "listening" event.
 */

function onListening() {
  var addr = server.address();
  var bind = typeof addr === 'string'
    ? 'pipe ' + addr
    : 'port ' + addr.port;
  debug('Listening on ' + bind);
}
